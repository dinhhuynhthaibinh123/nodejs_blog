<div class="mt-4">
    <h3>Cập nhật khóa học</h3>
    <form action="/courses/{{course._id}}?_method=PUT" method="post">
        <div class="form-group"> 
          <label for="name" class="form-label">Tên khóa học</label>
            <textarea class="form-control" id="name" name="name" >{{course.name}}</textarea>
        </div>
        <div class="form-group">
            <label for="description" class="form-label">Mô tả</label>
            <textarea class="form-control" id="description" name="description">{{course.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoId" class="form-label">Video Id</label>
            <textarea class="form-control" id="videoId" name="videoId" >{{course.videoId}}</textarea>
        </div> 
        <div class="form-group">
            <label for="level" class="form-label">Trình độ</label>
            <textarea class="form-control" id="level" name="level" >{{course.level}}</textarea>
        </div>
        <div class="form-group">
            <label for="slug" class="form-label">Slug</label>
            <textarea class="form-control" id="slug" name="slug" >{{course.slug}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Lưu lại khóa học</button>
    </form>
</div>