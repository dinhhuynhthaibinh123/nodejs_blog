<div class="search-form"  id="search-form" >
    <form method="post">
        <div class="form-group">
            <label for="search-input" class="form-label">Từ khóa</label>
         
            <input type="text" name="q" class="form-control" id="search-input" placeholder="Nhập từ khóa...">
        </div>
        <div class="form-group">
            <label for="search-input" class="form-label" >Giới tính</label>
            <select name="gender" class="form-control" id="gender-input">
                <option value="">-- Giới tính --</option>
                <option value="male">Nam</option>
                <option value="female">Nữ</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Nộp</button>
    </form>
</div>